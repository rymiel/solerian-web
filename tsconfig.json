{
    "compilerOptions": {
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strict": true,
        "sourceMap": true,
        "module": "esnext",
        "target": "es2021",
        "jsx": "react-jsx",
        "outDir": "build/",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "plugins": [{ "name": "typescript-plugin-css-modules" }],
        "noErrorTruncation": true
    },
    "include": [ "./src/**/*", "./test/**/*" ],
    "exclude": [ "./build/**/*" ],
}